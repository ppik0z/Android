<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/currencySymbolFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="TextView"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextAmountFrom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.85"
            android:hint="0"
            android:importantForAccessibility="yes"
            android:inputType="numberDecimal"
            android:textSize="40sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerFromCurrency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/currency_list" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/currencySymbolTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="TextView"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextAmountTo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.85"
            android:focusable="false"
            android:hint="0"
            android:importantForAccessibility="yes"
            android:inputType="none"
            android:textSize="40sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerToCurrency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/currency_list" />
    </LinearLayout>


    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text=" "
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
